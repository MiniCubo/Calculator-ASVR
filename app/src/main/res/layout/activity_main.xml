<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#646464"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="5dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- DISPLAY -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:padding="5dp">

            <TextView
                android:id="@+id/pantalla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:autoSizeMaxTextSize="96sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:background="#FFFFFF"
                android:fontFamily="monospace"
                android:maxLines="1"
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="14sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- ROW 7 8 9 ÷ -->
        <TableRow
            android:layout_weight="15"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/button7"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:padding="10dp"
                android:text="@string/btn7"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button8"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn8"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button9"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn9"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/div"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="div"
                android:text="@string/btndiv"
                app:cornerRadius="15dp" />
        </TableRow>

        <!-- ROW 4 5 6 × -->
        <TableRow
            android:layout_weight="15"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/button4"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn4"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button5"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn5"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button6"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn6"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/mult"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="mult"
                android:text="@string/btnstar"
                app:cornerRadius="15dp" />
        </TableRow>

        <!-- ROW 1 2 3 − -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="15"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn1"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button2"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn2"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button3"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn3"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/menos"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="sub"
                android:text="@string/btnmenos"
                app:cornerRadius="15dp" />
        </TableRow>

        <!-- ROW 0 . = + -->
        <TableRow
            android:layout_weight="15"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/button0"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btn0"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/button."
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="addExpresion"
                android:text="@string/btnpunto"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/buttone"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="calculate"
                android:text="@string/btne"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/suma"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:onClick="sum"
                android:text="@string/btnmas"
                app:cornerRadius="15dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
